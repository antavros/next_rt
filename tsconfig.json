{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "*.ts",
    "*.tsx",
    "*.js",
    "*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/**/*.ts",
    "**/**/*.tsx",
    "**/**/*.js",
    "**/**/*.jsx",
    ".next/types/**/*.ts",
    "src/components/shared/api/api.ts",
    "src/components/shared/api/data_types.tsx",
    "src/app/providers.tsx",
    "src/app/user/profile/page.js",
    "src/app/api/user/route.js"
  ],
  "exclude": ["node_modules"]
}
